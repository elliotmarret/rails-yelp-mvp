<h1><%= @restaurant.name %></h1>
<p>
  <%= @restaurant.address %><br>
  <%= @restaurant.phone_number %><br>
  <%= @restaurant.category %>
</p>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p>Rating: <%= review.rating %></p>
<% end %>

<%= link_to 'Back to Restaurants List', restaurants_path, class: 'btn btn-secondary' %>
